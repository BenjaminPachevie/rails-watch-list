<h1><%= @list.name %></h1>
<ul>
  <% @list.bookmarks.each do |bookmark| %>
      <li>
      <%= bookmark.movie.title %>
        <%= link_to "Remove this movie", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </li>
  <% end %>
</ul>

<%= link_to "Add a movie", new_list_bookmark_path(@list) %>
<%= link_to "Back to the menu", lists_path %>
